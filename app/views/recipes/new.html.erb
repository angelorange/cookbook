<%= form_for(@recipe, :html => {class:'form-horizontal', role:'form'}) do |f|  %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :title, 'Título' %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :title, class:'form-control', placeholder: 'Título da receita', autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-12">
      <%= f.label :recipe_type, 'Tipo da Receita' %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :recipe_type, class:'form-control', placeholder: 'Receitas sao variadas', autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-12">
      <%= f.label :cuisine, 'Cozinha' %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :cuisine, class:'form-control', placeholder: '', autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-12">
      <%= f.label :difficulty, 'Dificuldade' %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :difficulty, class:'form-control', placeholder: '', autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-12">
      <%= f.label :cook_time, 'Tempo de Preparo' %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :cook_time, class:'form-control', placeholder: '', autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-12">
      <%= f.label :ingredients, 'Ingredientes' %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :ingredients, class:'form-control', placeholder: '', autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-12">
      <%= f.label :cook_method, 'Como Preparar' %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :cook_method, class:'form-control', placeholder: '', autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-sm-offset-2 col-sm-10'>
    <%= f.submit 'Enviar', class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>

